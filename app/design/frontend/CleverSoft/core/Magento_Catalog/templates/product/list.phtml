                    $.getScript('<?php echo $block->getViewFileUrl('CleverSoft_Base/js/manual-trigger.js') ?>').done(function( script, textStatus ) {
                        <?php if ($ic_type !='auto') : ?>
                        window.behavior = 'twitter';
