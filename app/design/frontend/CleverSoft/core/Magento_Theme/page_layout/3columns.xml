<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns" > 
            <container htmlTag="div" htmlClass="row equal-height" name="3columns">
        		<container htmlTag="div" htmlClass="col-xs-12 col-sm-6 col-lg-6 pull-left padding-30" after="div.sidebar.main">
        			<container name="main" as="main" label="main" />
        		</container>
        		
                <container name="div.sidebar.main" htmlTag="div" htmlClass="sidebar sidebar-left zoo-sidebar-main col-xs-12 col-sm-3 col-lg-3 pull-left" >
                    <container name="sidebar.main" as="sidebar_main" label="Sidebar Main"/>
                </container>
                <container name="div.sidebar.additional" htmlTag="div" htmlClass="sidebar sidebar-right zoo-sidebar-additional col-xs-12 col-sm-3 col-lg-3  pull-right" after="div.sidebar.main">
                    <container name="sidebar.additional" as="sidebar_additional" label="Sidebar Additional"/>
                </container>
            </container> 
    </referenceContainer>
</layout>
 
 
 
 
 
 
 
 
 
